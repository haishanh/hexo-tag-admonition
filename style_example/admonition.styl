admon-color(color) {
    color = darken(color, 15%)
    background-color lighten(color, 25%)
    border-color color
}
  
.admonition {
  padding 0 15px
  margin-bottom 20px
  border 1px solid transparent
  border-radius 4px
  text-align left
  &-title {
    font-weight bold
    text-align left
  }
  &.note,
  &.info,
  &.tips {
    base-blue = #3498db
    admon-color(base-blue)
  }
  &.warning,
  &.warn,
  &.important {
    base-carrot = #e67e22
    admon-color(base-carrot)
  }
  &.danger,
  &.critical {
    base-alizarin = #e74c3c
    admon-color(base-alizarin)
  }
}